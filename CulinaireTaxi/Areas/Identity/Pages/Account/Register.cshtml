@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<main class="login-main">
    <div id="login-page" class="row">
        <div class="col s12 z-depth-6 card-panel">
            <form form asp-route-returnUrl="@Model.ReturnUrl" method="post" class="login-form">
                <div class="row">
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">mail_outline</i>
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger" data-error="wrong" data-success="right"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">lock_outline</i>
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12 m12 l12  login-text">
                        <i class="material-icons prefix">lock_outline</i>
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12 m12 l12 ">
                        <i class="material-icons prefix">lock_outline</i>
                        
                            <select>
                                <option value="" disabled selected>Gebruikers Type</option>
                                <option value="1">Normaal</option>
                                <option value="2">Taxi</option>
                                <option value="3">Restaurant</option>
                            </select>
                            
                        
                    </div>
                </div>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="input-field col s12">
                        <button type="submit" class="btn waves-effect waves-light col s12">Registreer</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</main>
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
