@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<main class="login-main">
    <div id="login-page" class="row">
        <div class="col s12 z-depth-6 card-panel">
            <form method="post" class="login-form">
                <div class="row">
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">mail_outline</i>
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="validate" />
                        <span asp-validation-for="Input.Email" data-error="wrong" data-success="right"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <i class="material-icons prefix">lock_outline</i>
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                </div>
                @*<div class="row" style="visibility:hidden">
                    <div class="input-field col s12 m12 l12  login-text">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>
                </div>*@
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="input-field col s12">
                        <button type="submit" class="btn waves-effect waves-light col s12">Log in</button>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s6 m6 l6">
                        <p class="margin medium-small"><a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registreer</a></p>
                    </div>
                    <div class="input-field col s6 m6 l6">
                        <p class="margin right-align medium-small"><a asp-page="./ForgotPassword">Wachtwoord vergeten?</a></p>
                    </div>
                </div>

            </form>
        </div>
    </div>
</main>
    

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
