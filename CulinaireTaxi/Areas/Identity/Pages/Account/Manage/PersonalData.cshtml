@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Account verwijderen";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>Om uw account te verwijderen van dit platform kunt u op de onderstaande knop drukken.</p>
        <p>
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
        @*<form asp-page="DownloadPersonalData" method="post" class="form-group">
            <button class="btn btn-default" type="submit">Download</button>
        </form>*@
        <p>
            <a asp-page="DeletePersonalData" class="btn btn-default">Verwijderen</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}